echo "Enter Two numbers : "
read a 
read b 

echo "Enter Choice :"
echo "1. Addition"
echo "2. Subtraction"
echo "3. Multiplication"
echo "4. Division"
read ch 

if(($ch=="1"))
	then
		echo $(( $a + $b ))
elif(($ch=="2"))
	then
		echo $(( $a - $b ))
elif(($ch=="3"))
	then
		echo $(( $a * $b ))
elif(($ch=="4"))
	then
		echo $(( $a / $b ))
fi

exit 0
